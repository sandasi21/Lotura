<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/primary_violet"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <!-- Hydration Reminder Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’§ Hydration Reminders"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_hydration_reminder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable Reminders"
                    android:layout_marginTop="12dp"
                    app:thumbTint="@color/switch_thumb"
                    app:trackTint="@color/switch_track"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reminder Interval"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="16dp"/>

                <Spinner
                    android:id="@+id/spinner_reminder_interval"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/spinner_background"
                    android:padding="12dp"/>

                <Button
                    android:id="@+id/btn_set_reminder_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Set Start Time"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/primary_violet"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Step Counter Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘Ÿ Step Counter"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_step_counter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable Step Counter"
                    android:layout_marginTop="12dp"
                    app:thumbTint="@color/switch_thumb"
                    app:trackTint="@color/switch_track"/>

                <TextView
                    android:id="@+id/txt_step_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 steps today"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_violet"
                    android:layout_marginTop="16dp"/>

                <Button
                    android:id="@+id/btn_reset_steps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reset Steps"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/primary_violet"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>